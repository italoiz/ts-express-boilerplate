{
  "name": "ts-express-boilerplate",
  "private": true,
  "version": "2.0.0",
  "main": "index.js",
  "author": "Italo Izaac <italoiz.dev@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node -r tsconfig-paths/register server.js",
    "dev": "concurrently -kr -n server,jobs \"yarn dev:server\" \"yarn dev:jobs\"",
    "dev:server": "ts-node-dev -r tsconfig-paths/register --transpileOnly --ignore-watch node_modules src/shared/infra/http/server.ts",
    "dev:jobs": "ts-node-dev -r tsconfig-paths/register --transpileOnly --ignore-watch node_modules src/shared/infra/workers/jobs/worker.ts",
    "build": "yarn clean && npm-run-all -p build:*",
    "clean": "rimraf tsconfig.tsbuildinfo dist/",
    "build:app": "tsc -p ./tsconfig.json",
    "build:files": "copyup src/**/*.{njk,html,png,jpeg,jpg,gif} dist/",
    "typeorm": "ts-node-dev -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "pretest": "cross-env NODE_ENV=test yarn typeorm migration:run",
    "test": "cross-env NODE_ENV=test jest --bail",
    "posttest": "cross-env NODE_ENV=test yarn typeorm migration:revert"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/agenda": "^2.0.6",
    "@types/bluebird": "^3.5.30",
    "@types/concurrently": "^5.1.0",
    "@types/cors": "^2.8.6",
    "@types/debug": "^4.1.5",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.3",
    "@types/glob": "^7.1.1",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.8",
    "@types/ramda": "^0.27.6",
    "@types/supertest": "^2.0.8",
    "@types/validator": "^12.0.1",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "copyfiles": "^2.2.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-import-helpers": "^1.0.2",
    "eslint-plugin-import-order": "^2.1.4",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.2.4",
    "lint-staged": "^10.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.2",
    "rimraf": "^3.0.2",
    "sqlite3": "^4.1.1",
    "supertest": "^4.0.2",
    "ts-jest": "^25.3.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "agenda": "^3.0.0",
    "concurrently": "^5.1.0",
    "cors": "^2.8.5",
    "date-fns": "^2.14.0",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "glob": "^7.1.6",
    "pg": "^8.2.1",
    "ramda": "^0.27.0",
    "reflect-metadata": "^0.1.13",
    "tsconfig-paths": "^3.9.0",
    "tsyringe": "^4.3.0",
    "typeorm": "^0.2.24"
  }
}
